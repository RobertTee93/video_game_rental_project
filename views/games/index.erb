<h1>Games</h1>

<form class="search-bar" action="games/:word/search" method="get">

  <input type="text" name="search" value="">
  <input type="submit" value="Search">
</form>

<form action="games/new" method="get">
  <input class="form-submit-button" type="submit" value="Add New Game">
</form>

<nav class="games_nav">

<ul>
  <li>Sort By</li>
  <li><a href="/games/available">Available Games</a></li>
</ul>
</nav>

<nav class="games_nav">
<ul>
  <li>View By Genre:</li>
  <% @genres.each do |genre| %>
  <li><a href="/games/find/<%= genre %>"><%= genre %></a></li>
  <% end %>
</ul>
</nav>

<% @games.each do |game| %>
<div class="games">
  <p>Name: <%= game.name %></p>
  <p>Genre: <%= game.genre %></p>
  <p>Platform: <%= game.platform %></p>
  <p>Release Date: <%= game.release_date %></p>
  <img src="<%= game.box_art %>" alt="image unavailable">
  <form action="/games/<%= game.id %>/delete" method="post">
    <button type="submit">Delete</button>
  </form>
</div>

<% end %>
